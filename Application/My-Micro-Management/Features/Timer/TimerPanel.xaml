<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_Micro_Management.Features.Timer.TimerPanel">
    <VerticalStackLayout>
        <Border StrokeShape="RoundRectangle 3" Margin="10,0,0,0" MinimumHeightRequest="470" Padding="10" Stroke="#757575" StrokeThickness="2">
            <VerticalStackLayout>
                <Label Text="{Binding SelectedProject.Name}"></Label>
                <Label Text="{Binding TimeElapsedStr, Mode=OneWay}"></Label>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>
